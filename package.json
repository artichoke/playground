{
  "name": "@artichokeruby/playground",
  "version": "0.5.0",
  "private": true,
  "description": "Artichoke Ruby Wasm Playground",
  "keywords": [
    "programming language",
    "scripting",
    "ruby",
    "rust",
    "wasm"
  ],
  "homepage": "https://artichoke.run",
  "bugs": "https://github.com/artichoke/playground/issues",
  "license": "MIT",
  "author": "Ryan Lopopolo <rjl@hyperbo.la> (https://hyperbo.la/)",
  "contributors": [
    "Ryan Lopopolo <rjl@hyperbo.la> (https://hyperbo.la/)"
  ],
  "repository": "github:artichoke/playground",
  "dependencies": {
    "@artichokeruby/logo": "^0.10.0",
    "@popperjs/core": "^2.9.2",
    "bootstrap": "^5.0.2",
    "monaco-editor": "^0.26.1"
  },
  "devDependencies": {
    "@hyperbola/svgo-loader": "^0.2.2",
    "@types/gtag.js": "0.0.7",
    "@typescript-eslint/eslint-plugin": "^4.28.5",
    "@typescript-eslint/parser": "^4.28.5",
    "css-loader": "^6.2.0",
    "css-minimizer-webpack-plugin": "^3.0.2",
    "eslint": "^7.32.0",
    "eslint-config-hardcore": "^20.2.0",
    "html-loader": "^2.1.2",
    "html-webpack-plugin": "^5.3.2",
    "mini-css-extract-plugin": "^2.1.0",
    "mini-svg-data-uri": "^1.3.3",
    "monaco-editor-webpack-plugin": "^4.1.1",
    "style-loader": "^3.2.1",
    "svgo": "^2.3.0",
    "ts-loader": "^9.2.4",
    "typescript": "^4.3.5",
    "webpack": "^5.47.1",
    "webpack-cli": "^4.7.2",
    "webpack-dev-server": "^4.0.0-rc.0"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "browser": true,
      "commonjs": true,
      "es6": true,
      "node": true
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:@typescript-eslint/recommended-requiring-type-checking",
      "hardcore",
      "hardcore/ts",
      "hardcore/ts-for-js"
    ],
    "rules": {
      "camelcase": "off",
      "lines-around-comment": "off",
      "max-statements": "off",
      "no-restricted-globals": [
        "error",
        "addEventListener",
        "blur",
        "close",
        "closed",
        "confirm",
        "defaultStatus",
        "defaultstatus",
        "event",
        "external",
        "find",
        "focus",
        "frameElement",
        "frames",
        "innerHeight",
        "innerWidth",
        "length",
        "location",
        "locationbar",
        "menubar",
        "moveBy",
        "moveTo",
        "name",
        "onblur",
        "onerror",
        "onfocus",
        "onload",
        "onresize",
        "onunload",
        "open",
        "opener",
        "opera",
        "outerHeight",
        "outerWidth",
        "pageXOffset",
        "pageYOffset",
        "parent",
        "print",
        "removeEventListener",
        "resizeBy",
        "resizeTo",
        "screen",
        "screenLeft",
        "screenTop",
        "screenX",
        "screenY",
        "scroll",
        "scrollbars",
        "scrollBy",
        "scrollTo",
        "scrollX",
        "scrollY",
        "status",
        "statusbar",
        "stop",
        "toolbar",
        "top"
      ],
      "no-underscore-dangle": "off",
      "padding-line-between-statements": "off",
      "import/group-exports": "off",
      "import/no-namespace": "off",
      "import/order": "off",
      "promise/always-return": "off",
      "putout/putout": "off",
      "unicorn/prefer-query-selector": "off",
      "@typescript-eslint/explicit-member-accessibility": [
        "error",
        {
          "accessibility": "no-public"
        }
      ],
      "@typescript-eslint/naming-convention": "off"
    },
    "ignorePatterns": [
      "**/src/wasm/**/*.js",
      "**/src/wasm/**/*.wasm",
      "webpack.config.js"
    ]
  },
  "scripts": {
    "build": "ruby scripts/build-wasm.rb",
    "build:release": "ruby scripts/build-wasm.rb --release",
    "dev": "webpack serve --mode development",
    "dev:open": "webpack serve --mode development --open",
    "dev:production": "wepack serve --mode production",
    "dev:production:open": "webpack serve --mode production --open",
    "fmt": "npx prettier --write \"**/*\"",
    "lint": "npx eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "npx eslint . --ext .js,.jsx,.ts,.tsx --fix"
  }
}
